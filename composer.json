{
    "name": "akondas/symfony-actuator-bundle",
    "type": "symfony-bundle",
    "description": "Production-ready features for your Symfony application",
    "keywords": [
        "php",
        "symfony",
        "actuator",
        "symfony-bundle",
        "health-status",
        "api-endpoints"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Arkadiusz Kondas",
            "email": "arkadiusz.kondas@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "symfony/framework-bundle": "^5.2 || ^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "^5.2 || ^6.0",
        "symfony/yaml": "^5.2 || ^6.0",
        "phpstan/phpstan": "^0.12.70"
    },
    "autoload": {
        "psr-4": {
            "Akondas\\ActuatorBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chaos\\ActuatorBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "build": [
            "@check-cs",
            "@phpstan",
            "@phpunit"
        ],
        "check-cs": [
            "php-cs-fixer fix --dry-run --diff"
        ],
        "fix-cs": [
            "php-cs-fixer fix"
        ],
        "phpunit": [
            "phpunit"
        ],
        "phpstan": [
            "phpstan analyse src tests --level=max"
        ]
    }
}
